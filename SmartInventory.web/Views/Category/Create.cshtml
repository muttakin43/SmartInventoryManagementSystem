@model SmartInventory.Contract.Request.CreateCategoryRequest

@{
    ViewData["HeaderTitle"] = "Create Category";
    ViewData["BreadCrumbFirst"] = "Home";
    ViewData["BreadCrumbActive"] = "Category";
}

<div class="row">
    <div class="col">
        <div class="card card-info">

            <div class="card-header">
                <h3 class="card-title">Create Category</h3>
            </div>

            <form class="form-horizontal" asp-action="Create" method="post">
                <div class="card-body">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group row">
                        <label asp-for="CategoryName" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="CategoryName"
                                   type="text"
                                   class="form-control"
                                   placeholder="Category Name" />
                            <span asp-validation-for="CategoryName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label asp-for="Description" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Description"
                                   type="text"
                                   class="form-control"
                                   placeholder="Description" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>

                </div>

                <div class="card-footer">
                    <button type="submit" class="btn btn-info">Create</button>
                    <a asp-action="Index" class="btn btn-default float-right">Cancel</a>
                </div>
            </form>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
