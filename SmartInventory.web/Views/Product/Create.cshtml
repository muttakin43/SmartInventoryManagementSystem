@model SmartInventory.Contract.Request.CreateProductRequest

@{
    ViewData["HeaderTitle"] = "Create Product";
    ViewData["BreadCrumbFirst"] = "Home";
    ViewData["BreadCrumbActive"] = "Product";
}

<div class="row">
    <div class="col">
        <div class="card card-info">
            <div class="card-header">
                <h3 class="card-title">Create Product</h3>
            </div>
            <form class="form-horizontal" asp-action="Create">
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group row">
                        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Name" type="text" class="form-control" placeholder="Name">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label asp-for="Description" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Description" type="text" class="form-control" placeholder="Description">
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label asp-for="Price" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Price" type="number" class="form-control" placeholder="Price">
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label asp-for="StockQuantit" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="StockQuantit" type="number" class="form-control" placeholder="Stock Quantit">
                            <span asp-validation-for="StockQuantit" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label asp-for="CategoryId" class="col-sm-2 col-form-label">Category</label>
                        <div class="col-sm-10">
                            <select asp-for="CategoryId" class="form-control">
                                <option value="">-- Select Category --</option>

                                @foreach (var item in ViewBag.Categories)
                                {
                                    <option value="@item.Id">@item.Name</option>
                                }
                            </select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>
                    </div>


                </div>

                <div class="card-footer">
                    <button type="submit" class="btn btn-info">Create</button>
                    <button type="submit" class="btn btn-default float-right">Cancel</button>
                </div>



            </form>

        </div>
        
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
